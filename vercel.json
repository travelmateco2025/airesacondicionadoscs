{
  "buildCommand": "echo 'No build step required'",
  "outputDirectory": ".",
  "framework": null,
  "installCommand": "echo 'No install step required'",
  "devCommand": "echo 'Static site - no dev server needed'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
